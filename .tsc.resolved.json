{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023", "dom", "dom.iterable"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [],
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "preserveConstEnums": true,
    "useDefineForClassFields": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "strictBuiltinIteratorReturn": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true
  },
  "files": [
    "./next-env.d.ts",
    "./scripts/phase0-audit.mjs",
    "./scripts/verify.mjs",
    "./src/env.ts",
    "./src/app/layout.tsx",
    "./src/app/not-found.tsx",
    "./src/app/page.tsx",
    "./src/app/(app)/layout.tsx",
    "./src/app/(app)/chapters/page.tsx",
    "./src/app/(app)/quests/page.tsx",
    "./src/app/(app)/tasks/page.tsx",
    "./src/app/(app)/today/page.tsx",
    "./src/app/api/aliases/save/route.ts",
    "./src/app/api/aliases/upsert/route.ts",
    "./src/app/api/reassign/route.ts",
    "./src/app/api/seed-domains/route.ts",
    "./src/app/api/settings/automation/route.ts",
    "./src/app/domain/page.tsx",
    "./src/app/providers/AuthProvider.tsx",
    "./src/app/sign-in/page.tsx",
    "./src/components/auth/Protected.tsx",
    "./src/components/chapters/ChapterForm.tsx",
    "./src/components/chapters/ChapterList.tsx",
    "./src/components/chapters/ChaptersInline.tsx",
    "./src/components/filters/DomainFilterBar.tsx",
    "./src/components/modals/ChapterCreateModal.tsx",
    "./src/components/modals/ChapterEditModal.tsx",
    "./src/components/modals/QuestCreateModal.tsx",
    "./src/components/modals/QuestEditModal.tsx",
    "./src/components/modals/TaskCreateModal.tsx",
    "./src/components/modals/TaskEditModal.tsx",
    "./src/components/nav/AppShell.tsx",
    "./src/components/nav/AppSidebar.tsx",
    "./src/components/nav/AppTopbar.tsx",
    "./src/components/nav/Breadcrumbs.tsx",
    "./src/components/nav/LinkWithParams.tsx",
    "./src/components/tasks/TaskForm.tsx",
    "./src/components/tasks/TaskList.tsx",
    "./src/components/tasks/TasksInline.tsx",
    "./src/components/ui/Modal.tsx",
    "./src/env/env.client.ts",
    "./src/env/env.server.ts",
    "./src/lib/domains.ts",
    "./src/lib/firebase-server.ts",
    "./src/lib/firebase.admin.ts",
    "./src/lib/firebase.client.ts",
    "./src/lib/firebase.ts",
    "./src/lib/repo.ts",
    "./src/lib/types.ts",
    "./src/lib/useChapters.ts",
    "./src/lib/useDomains.ts",
    "./src/lib/useQuests.ts",
    "./src/lib/useTasks.ts",
    "./src/lib/useTasksAll.ts",
    "./src/lib/ai/classify.ts",
    "./src/lib/ai/summarize.ts",
    "./src/lib/types/meeting.ts",
    "./src/types/models.ts",
    "./tools/check-missing-deps.js",
    "./tools/clean.js",
    "./tools/setup-deps.js",
    "./tools/what-root-configs.js"
  ],
  "include": ["next-env.d.ts", "scripts/**/*", "src/**/*", "tools/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
